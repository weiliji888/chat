{
	"easycom": {
		// 下载安装的方式需要前面的"@/"，npm安装的方式无需"@/"
		// 下载安装方式
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
		// npm安装方式
		// "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": ""
			}
		},
		{
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登录注册",
				"navigationStyle": "custom",
				"app-plus": {
					"titleNView": false,
					"animationType": "slide-in-bottom"
				}
			}
		}
		,{
		    "path" : "pages/goods/goods",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "首页",
		        "enablePullDownRefresh": false,
				"app-plus": {
					"titleNView": {
						"titleText": "首页",
						"backgroundColor": "#1692ea",
						"titleColor": "#FFFFFF"
					}
				}
		    }
		    
		}
	    ,{
            "path" : "pages/home/home",
            "style" : {
                "navigationBarTitleText": "消息",
                "enablePullDownRefresh": true,
				"app-plus": {
					"titleNView": {
						"titleText": "消息",
						"backgroundColor": "#1692ea",
						"titleColor": "#FFFFFF"
					}
				}
            }
            
        }
        ,{
            "path" : "pages/panel/panel",
            "style" : {
                "navigationBarTitleText": "聊天中...",
                "enablePullDownRefresh": false,
				"app-plus": {
					"titleNView": {
						"titleText": "聊天中...",
						"backgroundColor": "#1692ea",
						"titleColor": "#FFFFFF"
					}
				}
            }
            
        }
        ,{
            "path" : "pages/user-list/user-list",
            "style" : {
                "navigationBarTitleText": "我的好友",
                "enablePullDownRefresh": false,
				"app-plus": {
					"titleNView": {
						"titleText": "我的好友",
						"backgroundColor": "#1692ea",
						"titleColor": "#FFFFFF"
					}
				}
            }
            
        }
        ,{
            "path" : "pages/personal/personal",
            "style" : {
                "navigationBarTitleText": "个人中心",
                "enablePullDownRefresh": false,
				"app-plus": {
					"titleNView": {
						"titleText": "个人中心",
						"backgroundColor": "#1692ea",
						"titleColor": "#FFFFFF"
					}
				}
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "商城",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"backgroundColor": "#1692ea",
		"color": "#FFFFFF",
		"selectedColor": "#FFFFFF",
		"fontSize": "14px",
		"list": [
			{
				"pagePath":"pages/goods/goods",
				"text": "首页",
				"iconPath": "static/icons/home.png",
				"selectedIconPath": "static/icons/home1.png"
			},
			{
				"pagePath":"pages/home/home",
				"text": "消息",
				"iconPath": "static/icons/msg.png",
				"selectedIconPath": "static/icons/msg1.png"
			},
			{
				"pagePath":"pages/user-list/user-list",
				"text": "好友",
				"iconPath": "static/icons/user.png",
				"selectedIconPath": "static/icons/user1.png"
			},
			{
				"pagePath":"pages/personal/personal",
				"text": "我的",
				"iconPath": "static/icons/personal.png",
				"selectedIconPath": "static/icons/personal1.png"
			}
		]
	}
}
